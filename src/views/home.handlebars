<div>
    <h1>Productos:</h1>

    <ul>
        {{#each product.docs}} 
            <li>{{this.title }}   ${{this.price}}</li> 
        {{/each }}
    </ul>

    
    <div>
        {{#if product.hasPrevPage }} {{! si tiene una pagina previa, le muestra el link href}}
        <a href="/products?page={{product.prevPage}}">Anterior</a>
        {{/if}}

        <span>PÃ¡gina {{product.page}} de {{product.totalPages}}</span>

        {{#if product.hasNextPage }} {{! si tiene una pagina previa, le muestra el link href}}
        <a href="/products?page={{product.nextPage}}">Siguiente</a>
        {{/if}}
    </div>

</div>

